<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/navy_700</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorPrimaryContainer">@color/navy_500</item>
        <item name="colorOnPrimaryContainer">@color/on_primary_container</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/on_primary</item>

        <item name="background">@color/neutral_100</item>
        <item name="backgroundColor">@color/neutral_100</item>
        <item name="colorOnBackground">@color/black_800</item>
        <item name="colorSurface">@color/neutral_100</item>
        <item name="colorOnSurface">@color/black_800</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>
</resources>